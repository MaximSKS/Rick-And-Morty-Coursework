<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.rickandmortycoursework">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.rickandmortycoursework.RickyAndMortyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_rick_morty_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.RickAndMorty"
        tools:targetApi="31">
        <activity
            android:name="com.example.rickandmortycoursework.presentation.character.CharacterActivity"
            android:exported="true"
            android:theme="@style/Theme.RickAndMorty.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>

